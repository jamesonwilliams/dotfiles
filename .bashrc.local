export PS1="\u@\[$(tput bold)\]\[$(tput sgr0)\]\[\033[38;5;39m\]\h\[$(tput sgr0)\]\[$(tput sgr0)\]\[\033[38;5;15m\]\[$(tput sgr0)\]:\[\033[38;5;245m\]\w\[$(tput sgr0)\]\[\033[38;5;15m\]\[$(tput sgr0)\]\\$ "

export PAGER=/usr/bin/less
export EDITOR=/usr/bin/vim

export MAKEFLAGS="-j$(nproc)"

# These don't exist on some non-Debuntu systems. Would rather
# potentially re-alias them instead of risking not being active.
alias grep='grep --color'
alias rgrep='grep -R --color'
